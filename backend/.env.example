# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas - Free tier connection string
# Replace with your own connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/itemconnect?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Client URL
FRONTEND_URL=http://localhost:3000

# Cloud Storage (for images/videos)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1